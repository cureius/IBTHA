<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sp_bg"
    tools:context=".views.ui.SplashActivity">

    <ImageView
        android:id="@+id/sp_logo"
        android:layout_width="289dp"
        android:layout_height="269dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:contentDescription="@string/default_description"
        android:src="@drawable/splash_screen_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.423">

    </ImageView>

    <ImageView
        android:id="@+id/sp_app_name"
        android:layout_width="282dp"
        android:layout_height="25dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/default_description"
        android:src="@drawable/name"
        app:layout_constraintEnd_toEndOf="@+id/sp_logo"
        app:layout_constraintStart_toStartOf="@+id/sp_logo"
        app:layout_constraintTop_toBottomOf="@+id/sp_logo">

    </ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>