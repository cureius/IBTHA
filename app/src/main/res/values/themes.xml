<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IBTHA" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/projectLightPrimary</item>
        <item name="colorPrimaryVariant">@color/projectLightPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/safetyOrange</item>
        <item name="colorSecondaryVariant">@color/crimson</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/antiFlashWhite</item>
    </style>

    <style name="splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimaryVariant">@color/unitedNationBlue</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="text_color">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="primary_text">
        <item name="android:textColor">@color/projectLightPrimary</item>
    </style>

    <style name="toast">
        <item name="colorBackground">?android:attr/colorEdgeEffect</item>
        <item name="textColor">?android:attr/colorSecondary</item>
        <item name="iconLeft">@drawable/ic_outline_shopping_cart_24</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">10dp</item>
    </style>
</resources>